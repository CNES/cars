{
  "input": {
    "sensors": {
      "one": {
        "image": "img1.tif",
        "geomodel": {
          "path": "img1.geom"
        }
      },
      "two": {
        "image": "img2.tif",
        "geomodel": {
          "path": "img2.geom"
        }
      }
    },
    "pairing": [
      [
        "one",
        "two"
      ]
    ],
    "initial_elevation": "srtm_dir/N29E031_KHEOPS.tif"
  },
  "applications": {
    "resampling": {
      "save_epipolar_image": true
    },
    "dense_matching": {
      "method": "census_sgm",
      "save_intermediate_data": true,
      "min_epi_tile_size": 103,
      "max_epi_tile_size": 103
    },
    "triangulation": {
      "method": "line_of_sight_intersection",
      "save_intermediate_data": true
    },
    "point_cloud_fusion": {
      "method": "mapping_to_terrain_tiles",
      "save_point_cloud_as_laz": false,
      "save_point_cloud_as_csv": false
    },
    "point_cloud_outliers_removing.1": {
      "method": "small_components",
      "save_point_cloud_as_laz": false,
      "save_point_cloud_as_csv": false
    },
    "point_cloud_outliers_removing.2": {
      "method": "statistical",
      "save_point_cloud_as_laz": true,
      "save_point_cloud_as_csv": false
    }
  },
  "output": {
    "out_dir": "outresults"
  },
  "orchestrator": {
    "mode": "sequential",
    "max_ram_per_worker": 1,
    "profiling": {
      "activated": false,
      "mode": "cprofile"
    }
  }
}